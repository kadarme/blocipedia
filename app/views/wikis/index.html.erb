<h1>All Wikis</h1>

<div class="row">
  <div  class="col-md-8">
    
  <% if policy(Wiki.new).create? %>
    <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success' %>

    <% @wikis.each do |wiki| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to wiki.title, wiki %>
          </h4>
            <small>
              created <%= time_ago_in_words(wiki.created_at) %> ago by <%= wiki.user.name %><br/>
            </small>
        </div>
      </div>
    <% end %>
  <% end %>
    
  </div>
</div>