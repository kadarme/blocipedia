<%= form_for wiki do |f| %>
  <% if wiki.errors.any? %>
     <div class="alert alert-danger">
       <h4>There are <%= pluralize(wiki.errors.count, "error") %>.</h4>
       <ul>
         <% wiki.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
         <% end %>
       </ul>
     </div>
   <% end %>
  <%= form_group_tag(wiki.errors[:title]) do %>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki title" %>
  <% end %>
  <%= form_group_tag(wiki.errors[:body]) do %>
    <%= f.label :body %>
    <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter wiki body" %>
  <% end %>
  <%= form_group_tag(wiki.errors[:private]) do %>
     <%= f.label :private, class: 'checkbox' do %>
     <%= f.check_box :private %> Private topic
      <% end %>
  <% end %>
  <div class="form-group">
    <%= link_to 'Upgrade to premium user to create private wikis.', edit_user_registration_path if current_user.is_premium_user == false %>
  </div>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>


<% if current_user.role == 'admin' || current_user.role == 'premium' %>
  <div class="form-group">
    <%= f.label :private, class: 'checkbox' do %>
      <%= f.check_box :private %> Private wiki
    <% end %>
  </div>
<% end %>